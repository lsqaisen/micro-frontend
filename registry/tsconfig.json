{
	"compilerOptions": {
		"module": "esnext",
		"target": "esnext",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": false,
		"sourceMap": true,
		"outDir": "ts-build",
		"jsx": "preserve",
		"strict": true,
		"experimentalDecorators": true,
		"types": [
			"node"
		],
		"typeRoots": [
			"types"
		],
		"lib": [
			"es2017",
			"dom"
		],
		"baseUrl": "..",
		"paths": {
			"library": [
				"_library/dist/"
			],
			"library/*": [
				"_library/*"
			],
			"config": [
				"_config/api/"
			],
			"@/*": [
				"registry/src/*"
			],
			"@/components/*": [
				"registry/src/components/*"
			],
			"@/services/*": [
				"registry/src/services/*"
			],
			"@/utils/*": [
				"registry/src/utils/*"
			],
		}
	},
	"exclude": [
		"node_modules"
	],
}
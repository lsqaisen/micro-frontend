{
	"compilerOptions": {
		"module": "esnext",
		"target": "esnext",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": false,
		"sourceMap": true,
		"jsx": "preserve",
		"strict": true,
		"experimentalDecorators": true,
		"types": [
			"node"
		],
		"typeRoots": [
			"types"
		],
		"lib": [
			"es2017",
			"dom"
		]
	},
	"exclude": [
		"node_modules"
	],
}